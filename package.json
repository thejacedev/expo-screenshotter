{
  "name": "expo-screenshotter",
  "version": "1.0.0",
  "description": "A tool to take screenshots of Expo apps at different screen sizes",
  "main": "dist/index.js",
  "bin": {
    "expo-screenshotter": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "depcheck": "depcheck --ignores=\"depcheck, expo-screenshotter\"",
    "release": "release-it",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "expo",
    "screenshot",
    "react-native",
    "testing"
  ],
  "author": "Jace Sleeman (@thejacedev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thejacedev/expo-screenshotter"
  },
  "bugs": {
    "url": "https://github.com/thejacedev/expo-screenshotter/issues"
  },
  "homepage": "https://github.com/thejacedev/expo-screenshotter#readme",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "expo-screenshotter": "file:",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.2",
    "inquirer": "^12.4.2",
    "puppeteer": "^24.6.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.10",
    "depcheck": "^1.4.7",
    "eslint": "^9.21.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "release-it": "^18.1.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
